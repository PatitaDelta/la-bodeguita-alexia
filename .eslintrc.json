{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends":[ 
        "standard-with-typescript",
        "plugin:astro/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/member-delimiter-style": "off",
        "@typescript-eslint/triple-slash-reference": "off"
    }
}
